@{
    ViewBag.Title = "Pricer";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Prix du Multimonde
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Multimonde 2021", "Index", "Home")
                </li>
                <li>Prix du Multimonde</li>
            </ol>
        </div>
    </div>

    <h4>
        Pour pricer le produit, vous devez d'abord préciser la date du début du pricing puis appuyer sur le bouton Pricer.
    </h4>


    <div class="row well">
   
        <div class="col-lg-8 col-md-8">
        @using (Html.BeginForm())
        {
        <p>Date de début de Calcul entre 01.10.2015 et 12.11.2021 (au format jj.mm.aaaa):</p>
                string date = "01.10.2015";
                @Html.TextBox("Date", date)
                ViewData.Add("Date", date);
                object prixMultimonde, ICMultimonde;
                <p>Prix obtenu : </p>
                if (@ViewData.TryGetValue("prixMultimonde", out prixMultimonde))
                {
                    <div>@prixMultimonde.ToString()</div>
                }
                else
                {
                    <div>0.00</div>
                }
                <p>Intervalle de confiance : </p>
                 if (@ViewData.TryGetValue("ICMultimonde", out ICMultimonde))
                {
                    <div>@ICMultimonde.ToString()</div>
                }
                else
                {
                    <div>0.00</div>
                }
            
            }
        </div>
        <div class="col-lg-4 col-md-4">
        @using (Html.BeginForm())
        {
            object date;
            ViewData.TryGetValue("Date", out date);
            @Html.ActionLink("Pricer", "Index", new { id = -1, date = date }, new { @class = "btn btn-primary" })
        }
        </div>
    

    </div>

</div>
